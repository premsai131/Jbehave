pipeline {
    agent any

    tools {
        // Install the Maven version configured as "mvn" and add it to the path.
        maven "mvn"
    }

    stages {
        stage('Build') {
            steps {
                git branch: 'master', url: 'https://github.com/premsai131/Jbehave.git'
                dir('jbehavesamples')
                // Run Maven on a Unix agent.
                {
                sh "pwd"
                sh "mvn clean test"
                }

                // To run Maven on a Windows agent, use
                // bat "mvn -Dmaven.test.failure.ignore=true clean package"
            }

            post {
                allways
                 {
                    emialtext body: 'summary', subject: 'Pipeline Status', to: 'premsai131infotech@gmail.com'
                }
            }
        }
    }
}
